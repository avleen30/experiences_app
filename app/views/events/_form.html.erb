<div class="container">
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :cover_img %><br>
    <%= f.file_field :cover_img %>
  </div>

  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :remote_cover_img_url %>
  </div>

  <div class="datepicker field">
   <%= text_field_tag :event_date_filter, '', class: 'datepicker', :placeholder => "Date"%>
  </div>

  <div class="timepicker field">
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
  </div>


  <div class="field">
    <%= f.label :lng, 'Longitude' %>
    <%= f.text_field :lng %>
  </div>

  <div class="field">
    <%= f.label :lat, 'Latitude' %>
    <%= f.text_field :lat %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

