
<div class="parallax-container">
  <div class="parallax"><img src="<%=@event.cover_img%>"></div>
</div>


<div id="notice">
  <%= notice %>
</div>

<div class="container" id="nameofevent">
  <%= @event.name %>
</div>

<div class="container">
    <div id='event-detail-map' class="event_detail_map"></div>
</div>

<div class="container" id="eventinfo">
  <div class="parallax">
    <h5 id="title"> Event Info:</h5>
    <div>
      <strong>Description:</strong>
      <%= @event.description %>
    </div>


    <div>
      <strong>Start date:</strong>
      <%= @event.start_date %>
    </div>

    <div>
      <strong>End date:</strong>
      <%= @event.end_date %>
    </div>

    <div>
      <strong>Creator:</strong>
      <%= @event.creator_id %>
    </div>

    <div>
      <strong>Longitude:</strong>
      <%= @event.lng %>
    </div>

    <div>
      <strong>Latitude:</strong>
      <%= @event.lat %>
    </div>

  </div>
</div>

<% if current_user.id == @event.creator_id %>
  <%= link_to 'Edit Your Event', edit_event_path(@event) %> |
   <% end %>
<div class="container" id="userinfo">
  <div class="parallax" id="username">
  <h5 id="creator">Creator Info</h5>
    <%= render 'users/show' %>
  </div>

</div>

<div class="container" id="attendes">
  <div class="parallax">
  <h5 id="attendestitle"> Attendes </h5>
    <% @event_users.each do |eu| %>
    <dd>
    <dl >User # <%= eu.id %>
      <%= eu.user.first_name %>
      <%= eu.user.last_name %>
      is <strong> <%= eu.status %> </strong>
    </dl>
    </dd>
    <% end %>
  </div>
</div>

<%= link_to 'Back To Map', events_path %>


<div class="container" id="eventinfo">
  <div class="parallax">
  <% if current_user %>
    <div id="review-form" class="row">
      <div class="col-sm-12">
        <div class="container" id="disscusion">
         Event Discussion:
        </div>

        <%= form_for [@event, @post] do |form| %>

          <div class="form-group">

              <%= form.text_area :content, rows: '4', class: 'form-control' %>
          </div>
          <%= form.submit 'Submit', class: 'btn btn-primary' %>

            <% end %>
      </div>
    </div>
  <% end %>

    <div>
     <div class="container" id="eventinfo">
      <div id="posttitle">Post</div>

        <div>
          <% @event.posts.each do |post| %>
            <div><strong>User #<%= post.user_id %>'s post:</strong></div>
            <div>
              <%= post.content %>
            </div>

          <% end %>
        </div>
      </div>
</div>


<script>
  window.event = <%== @event.to_json %>;
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=
<%= Rails.application.secrets.google_key %>&callback=initMap_detail">

</script>

<script> $(document).ready(function(){
      $('.parallax').parallax();
    });</script>




