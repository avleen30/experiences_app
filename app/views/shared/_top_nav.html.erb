    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :cover_img %><br>
    <%= f.file_field :cover_img %>
  </div>

  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :remote_cover_img_url %>
  </div>

  <div class="datepicker field">
   <%= f.text_field :start_date, class: 'datepicker', :placeholder => "Date"%>
  </div>

  <div class="timepicker field">
    <%= f.label :time %>
    <div style="color:black;"><%= f.text_field :time %></div>
  </div>


  <script type="text/javascript">
    var geocoder;
    var map;
    function initialize() {
      geocoder = new google.maps.Geocoder();
      var toronto = {lat: 43.6532, lng: -79.3832};
      map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: toronto
      })
    }

    function codeAddress() {
      var address = document.getElementById('address').value;
      geocoder.geocode( { 'address': address}, function(results, status) {
        if (status == 'OK') {
          map.setCenter(results[0].geometry.location);
          var marker = new google.maps.Marker({
              map: map,
              position: results[0].geometry.location
          });
          document.getElementById("event_lat").value = results[0].geometry.location.lat()
          document.getElementById("event_lng").value = results[0].geometry.location.lng()
        } else {
          alert('Geocode was not successful for the following reason: ' + status);
        }
      });
    }
  </script>

  <body onload="initialize()">
  <div id="map" style="width: 100%; height: 300px;"></div>
   <div>
     <input id="address" type="textbox" value="Toronto">
     <input type="button" value="Encode" onclick="codeAddress()">
   </div>
 </body>

  <div class="field">
  <%= f.label :lng, 'Longitude' %>
  <%= f.text_field :lng %>
</div>

<div class="field">
  <%= f.label :lat, 'Latitude' %>
  <%= f.text_field :lat %>
</div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
</div>

