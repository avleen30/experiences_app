
<div class="parallax-container">
  <div class="parallax"><img src="https://twistedsifter.files.wordpress.com/2015/08/shade-of-mountain-blue-by-luca-zanon.jpg"></div>
</div>

<div id="creatorimg"><img id="creatorimg" src="<%=@user.avatar %>"></div>
</div>

<div style="text-align:center; margin: 10px;">
  <h5><%= @user.full_name %></h5>
  <div><%= @user.email %></div>
</div>
<hr>
    <div class="container">


      <div class="container" style="text-align:center;">

        <div><%= @user.about %></div>

      </div>

    <br><br>



<div class="titles">
    <h5 id="creatortitleprofile" style="text-align:center;"><%= @user.first_name %>'s Events:</h5>
</div>

<div class="row">
<% @user.created_events.each do |u| %>
        <div class="col s2" style="margin:2em;">
          <div class="card large">
              <div class="card-image">
                <img src="<%= u.cover_img %>">
                <span class="card-title"><%= u.name %></span>
              </div>
              <div class="card-content">
                <p>
                  <strong>Date:</strong>
                  <%= u.start_date %>
                </p>

                <p>
                  <strong>Time:</strong>
                  <%= u.time %>
                </p>

              </div>
              <div class="card-action">
                <%= link_to "view event", event_path(u) %>
              </div>
          </div>
        </div>
        <% end %>
      </div>
</div>